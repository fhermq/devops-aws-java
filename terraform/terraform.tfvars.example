# ============================================================================
# SENSITIVE VALUES - Set via GitHub Secrets (see GITHUB_SECRETS_SETUP.md)
# ============================================================================
# These values are provided by GitHub Actions workflow from secrets
# Do NOT edit these lines - they will be overwritten by the workflow
# aws_account_id = "YOUR_AWS_ACCOUNT_ID"  # Set via AWS_ACCOUNT_ID secret
# aws_region     = "us-east-1"            # Set via AWS_REGION secret
# github_org     = "YOUR_GITHUB_ORG"      # Set via ORG_NAME secret
# github_repo    = "YOUR_REPO_NAME"       # Set via REPO_NAME secret

# ============================================================================
# PUBLIC CONFIGURATION - Safe to commit to git
# ============================================================================

# ECR Configuration
ecr_repository_name  = "devops-aws-java"
image_retention_count = 5

# EKS Configuration
eks_cluster_name      = "devops-aws-java-cluster"
kubernetes_version    = "1.30"
vpc_cidr              = "10.0.0.0/26"
node_instance_types   = ["t3.small"]
node_desired_size     = 2
node_min_size         = 1
node_max_size         = 4

# Security Configuration
# Set this to your public IP address (e.g., "203.0.113.42")
# This restricts LoadBalancer access to only your IP via Network ACL
# Find your IP: curl https://checkip.amazonaws.com
allowed_ip            = "0.0.0.0"  # CHANGE THIS TO YOUR IP!
